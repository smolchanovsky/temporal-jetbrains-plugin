<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.smolchanovsky.temporalplugin</id>
    <name>Temporal.io</name>
    <vendor url="https://github.com/smolchanovsky">smolchanovsky</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>
    <depends optional="true" config-file="java-support.xml">com.intellij.java</depends>
    <depends optional="true" config-file="go-support.xml">org.jetbrains.plugins.go</depends>

    <resource-bundle>messages.TemporalBundle</resource-bundle>

    <extensionPoints>
        <extensionPoint
            name="workflowDefinitionFinder"
            interface="com.github.smolchanovsky.temporalplugin.usecase.navigation.WorkflowDefinitionFinder"
            dynamic="true"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.smolchanovsky.temporalplugin.ui.toolWindow.TemporalToolWindowFactory"
                    id="TemporalToolWindow"
                    anchor="bottom"
                    icon="AllIcons.Actions.ProjectWideAnalysisOff"
                    canCloseContents="true"/>
        <projectConfigurable
                parentId="tools"
                instance="com.github.smolchanovsky.temporalplugin.ui.settings.TemporalSettingsConfigurable"
                id="com.github.smolchanovsky.temporalplugin.ui.settings.TemporalSettingsConfigurable"
                key="settings.displayName"
                bundle="messages.TemporalBundle"/>
        <notificationGroup id="TemporalWorkflowNavigation" displayType="BALLOON"
                           key="notification.group.workflowNavigation" bundle="messages.TemporalBundle"/>
        <notificationGroup id="TemporalErrors" displayType="BALLOON"
                           key="notification.group.errors" bundle="messages.TemporalBundle"/>
        <postStartupActivity
                implementation="com.github.smolchanovsky.temporalplugin.ui.toolWindow.ToolWindowStartupActivity"/>
    </extensions>

    <actions>
        <action id="Temporal.OpenToolWindow"
                class="com.github.smolchanovsky.temporalplugin.ui.toolWindow.OpenToolWindowAction">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
